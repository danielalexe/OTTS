<UserControl x:Class="DataControls.CPassword"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Viewbox Grid.Row="0" Grid.Column="0" Stretch="Uniform" StretchDirection="DownOnly">
            <Label x:Name="CLabelValue" Background="White" Foreground="Black" Content="Label" FontSize="22">
            </Label>
        </Viewbox>
        <PasswordBox Grid.Row="0" Grid.Column="1" x:Name="CPasswordValue" Background="White" Foreground="Black" FontSize="22"></PasswordBox>
    </Grid>
</UserControl>
