<UserControl x:Class="DataControls.CUploadFile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0" x:Name="CButtonValue" Foreground="White" Content="Browse" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ></Button>
        <Label Grid.Row="0" Grid.Column="1" x:Name="CLabelValue" Background="White" Foreground="Black" FontSize="22" IsEnabled="False"></Label>
    </Grid>
</UserControl>
